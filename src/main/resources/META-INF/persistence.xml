<persistence 
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="firstSpringApp" transaction-type="RESOURCE_LOCAL">
	
		<!-- provedor do JPA -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<!-- entidades mapaeadas -->
    	<class>br.com.canalvpsasul.vpsabusiness.entities.SyncControl</class>
    	
    	<class>br.com.canalvpsasul.vpsabusiness.entities.administrativo.Empresa</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.administrativo.Entidade</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.administrativo.Portal</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.administrativo.Role</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.administrativo.Terceiro</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.administrativo.User</class>
    	
    	<class>br.com.canalvpsasul.vpsabusiness.entities.fiscal.CupomFiscal</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.fiscal.Imposto</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.fiscal.ItemNota</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.fiscal.ItemNotaServico</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.fiscal.NotaConsumo</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.fiscal.NotaMercadoria</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.fiscal.NotaServico</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.fiscal.RetencaoNotaServico</class>
    	
    	<class>br.com.canalvpsasul.vpsabusiness.entities.operacional.Produto</class>
    	<class>br.com.canalvpsasul.vpsabusiness.entities.operacional.Servico</class>
    	
		<properties>
			
			<!-- propriedades do hibernate -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			
			<!-- atualiza o banco, gera as tableas se for preciso -->
			<property name="hibernate.hbm2ddl.auto" value="create" /> <!-- Alterar para create sempre que precisar alterar o schema -->
			<property name="hibernate.hbm2ddl.import_files" value="initial_data.sql" /> 
			
		</properties>
		
	</persistence-unit>
	
</persistence>